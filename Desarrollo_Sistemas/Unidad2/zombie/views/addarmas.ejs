<% include _header %>

<h1> Agregar Armas </h1>

<form action="/addarmas" method="post">
    <div class="form-group">
        <input name = "descripcion" type ="text" class="form-control"
        placeholder="Nombre de la arma" required autofocus />
    </div>
    <div class= "form-group">
        <input name="fuerza" type ="int" class ="form-control"
        placeholder="Fuerza" required/>
    </div>
    <div class= "form-group">
        <input name="categoria" type ="text" class ="form-control"
        placeholder="Categoria" required/>
    </div>
    <div class= "form-group">
        <input name="municiones" type ="Boolean" class ="form-control"
        placeholder="Municiones" required/>
    </div>
    <div>
    <input type="submit" value="Agregar Arma" class="btn btn-primary btn-block"/>
    </div>
</form>

<% include _footer %>