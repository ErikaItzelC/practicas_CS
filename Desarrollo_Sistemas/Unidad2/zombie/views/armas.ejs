<% include _header %>
<h1> Armas! 
<a href="/addArmas" class="btn btn-primary pull-right" role="button"> Agregar armas </a></h1>
<% armas.forEach((arma) => { %>
<div class="panel panel-danger">
    <div class="panel-heading">
         <p><%= arma.categoria %></p>
    </div>
    <% if(arma.descripcion) { %>
        <div class="panel-body"><%= arma.descripcion %>
        <p></p>
        <% if(arma.fuerza) { %>
            <p>Fuerza: <%= arma.fuerza %></p>
        <% } %>
        <% if(arma.municiones === true) { %>
            <p>Municiones: Si</p>                
        <% } %>
        </div>
<% } %>
</div>
<% }) %>

<% include _footer %>